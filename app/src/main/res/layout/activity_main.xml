<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background_gradient"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:id="@+id/searchlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/searchbar_style">

        <EditText
            android:imeOptions="actionDone"
            android:id="@+id/search_city_name"
            android:textColorHint="#7C7C7C"
            android:textStyle="bold"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_gravity="center"
            android:hint="Enter your City Name"
            android:background="@drawable/empty_bg_style"
            android:layout_weight="90"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/search"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:src="@drawable/baseline_search_24"
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:tint="@color/black" />

    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/searchlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Search Bar-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:layout_marginStart="@dimen/_5sdp"
                    android:id="@+id/city_name"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20sdp"
                    android:textColor="@color/white"
                    android:text="N/A"/>

            </LinearLayout>



            <!--Image Icon-->
            <ImageView
                android:id="@+id/api_cloud_icon"
                android:layout_gravity="center"
                android:src="@drawable/default_cloud"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp">
            </ImageView>

            <TextView
                android:id="@+id/temperature"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_50sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="N/A"/>

            <LinearLayout
                android:padding="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/alpha_bg_card_details">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_20sdp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="#99f2c8"
                        android:text="N/A"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#7CFFFFFF"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/hum_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/humidity"/>

                    <TextView
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/hum_icon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Humidity"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/humidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold|italic"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="N/A"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#7CFFFFFF"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/wind_speed"
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/wind"/>

                    <TextView
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/wind_speed"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wind Speed"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/windspeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold|italic"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="N/A"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#7CFFFFFF"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/sunrise_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/sunrise"/>

                    <TextView
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/sunrise_icon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunrise"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/Sunrise"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold|italic"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="N/A"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#7CFFFFFF"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/sunset_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/sunset"/>

                    <TextView
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/sunset_icon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sunset"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/sunset"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold|italic"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="N/A"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#7CFFFFFF"
                    android:layout_marginBottom="@dimen/_10sdp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/pressure_icon"
                        android:layout_alignParentLeft="true"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/pressure"/>

                    <TextView
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/pressure_icon"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pressure"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_20sdp"/>
                    <TextView
                        android:id="@+id/Pressure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_15sdp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold|italic"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:text="N/A"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#7CFFFFFF"
                    android:layout_marginBottom="@dimen/_10sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:text="Made with ðŸ¤ by Bhavesh Shah"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


  </RelativeLayout>